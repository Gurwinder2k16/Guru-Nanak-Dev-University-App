<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="61dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="108dp"
        android:ems="10"
        android:inputType="textPassword" />

    <ImageView
        android:id="@+id/adm"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_x="246dp"
        android:layout_y="60dp"
        android:src="@drawable/newic_launcher" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="156dp"
        android:layout_y="157dp"
        android:text="Create New User??" />

    <Button
        android:id="@+id/minfo"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_x="92dp"
        android:layout_y="157dp"
        android:text="Login" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_x="-2dp"
        android:layout_y="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/home" />

    <ImageView
        android:id="@+id/midimage"
        android:layout_width="51dp"
        android:layout_height="48dp"
        android:layout_x="242dp"
        android:layout_y="108dp"
        android:src="@drawable/password" />

    <TextView
        android:id="@+id/cname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="84dp"
        android:layout_y="-4dp"
        android:fontFamily="Segoe UI Symbol"
        android:text="Log In"
        android:textColor="#fff"
        android:textSize="33sp" />

</AbsoluteLayout>